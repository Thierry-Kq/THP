<%= form_for @gossip_id, :url => user_gossip_path do |f| %>

  <div class="form-row">
    <div class="form-group col-md-2">
      Titre du Gossip : <%= f.text_field :title, class: 'form-control',  placeholder: 'Nom du gossip' %>
    </div>
    <div class="form-group col-md-2">
    Contenue du gossip : <%= f.text_area :content, class: 'form-control', placeholder: 'Ecris ton gossip...' %>
    </div>
  </div>
    <%= f.submit class: 'btn btn-primary' %>

<% end %>
