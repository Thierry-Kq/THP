<!DOCTYPE html>
<html>
  <head>
    <title>TestOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" <%= link_to 'Accueil', root_path %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if is_logged_in %>
            <a class="nav-item nav-link"<%= link_to 'Club' , club_path %></a>
            <a class="nav-link" href = "<%=logout_path%>" > Log out <span class="sr-only">(current)</span></a>
          <% else %>
            <a class="nav-item nav-link"<%= link_to 'Login' , login_path %></a>
            <a class="nav-item nav-link active" <%= link_to 'Inscription', new_user_path %><span class="sr-only">(current)</span></a>
          <% end %>
        </div>
      </div>
    </nav>

    <% if flash[:info]%>
      <p class="alert alert-info"><%=flash[:info]%></p> 
    <% elsif flash.now[:danger]%>
      <p class="alert alert-danger"><%=flash[:danger]%></p>
    <% elsif flash.now[:success]%>
      <p class="alert alert-success"><%=flash[:success]%></p>
    <% end%>

    <%= yield %>
    
  </body>
</html>
