<h1 class="text-center mb-4">Welcome to my todolist app</h1>
<%= render 'layouts/task_form'  %>



<div class="container">
  <ul>
  <% @categories.each do  |category|%>
  <li><%= submit_tag(category.title, class: "btn btn-start-order") %></li>
  <div class="card" id="<%=category.title%>">
    <ul>
      <% category.tasks.each do |task|  %>
      <li>
        <!-- <input type="checkbox" value="Car" > -->

        <%= task.title  %>
        <% unless task.deadline.nil? %>
          , to read: <%= task.deadline.strftime('%D')  %>
        
        <%= link_to "Edit", edit_task_path(task),remote: true %>
        <%= link_to "Delete", task_path(task),remote: true, class: 'delete_task',
                                 :data => {:confirm => "You sure?",
                                           :method => "delete"} %>

        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  </ul>
</div>

<div class="container">
  <div class="row">
    <div id="carrousel">
        <% @tasks.each do |task|  %>
          <div class="card col-12">
            <% unless task.image.nil? %>
              <%= image_tag task.image, class: "robot" %>
            <% end %>
          </div>
        <% end %>
      </div>
  </div>
</div>

